<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="coffee.jpg"
                   SemanticProperties.Description="My Coffee"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="My Coffee" VerticalOptions="End" />
            <Label FontSize="22" Text="" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you to manage your shopping lists" />

    </VerticalStackLayout>
</ContentPage>